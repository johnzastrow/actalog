# ActaLog with PostgreSQL Configuration

# GitHub Container Registry
GITHUB_OWNER=yourusername
TAG=latest

# Application
PORT=8080
APP_URL=http://localhost:8080
CORS_ORIGINS=http://localhost:8080

# PostgreSQL Database
DB_NAME=actalog
DB_USER=actalog
DB_PASSWORD=your_secure_postgres_password_here
DB_SSLMODE=disable

# JWT (REQUIRED)
JWT_SECRET=your_very_secure_jwt_secret_here_change_this
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# Email (Optional)
# EMAIL_FROM=noreply@yourdomain.com
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password

# Automatic Seed Import (Optional)
# Set these to automatically import movements and WODs from CSV files on first run
# The first user you create in the UI should match these credentials
# ADMIN_EMAIL=admin@example.com
# ADMIN_PASSWORD=your_secure_admin_password
